@{
    ViewData["Title"] = "Edit | Project";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml"; 

}
@model PracticeProject.Models.Projects

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Project</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/adminpanel/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Edit Project</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Edit Project</h3>
                    </div>
                    <form asp-area="AdminPanel" asp-controller="Project" asp-action="EditProject" method="post" enctype="multipart/form-data">
  
                        <div class="card-body">
                            <input type="hidden" asp-for="ProjectId" />

                            <div class="form-group">
                                <label for="newsTitle">News Title</label>
                                <input type="text" class="form-control" asp-for="ProjectName" required>
                            </div>

                             <div class="form-group">
                                  <label>Project Date</label>
                                  <input asp-for="ProjectDate" type="date" class="form-control" required />
                             </div>
                      
                            <div class="form-group">
                                <label for="newsDesc">News Description</label>
                                <textarea class="form-control" placeholder="Enter Description" asp-for="ProjectDesc" rows="4"></textarea>
                                <span asp-validation-for="ProjectDesc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="file">Upload New Photo (Optional)</label>
                                <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
                            </div>
                            @if (!string.IsNullOrEmpty(Model.ProjectImage))
                            {
                                <div class="form-group">
                                    <label>Current Photo:</label><br>
                                    <img src="@Model.ProjectImage" alt="News Image" width="150" />
                                </div>
                            }
                            <button type="submit" name="action" value="update" class="btn btn-primary">Update</button>
                           
                       
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
