<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel | KTechsolutions</title>

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/lib/adminlte/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/lib/adminlte/plugins/fontawesome-free/css/all.min.css" />

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/adminpanel/dashboard" class="nav-link">Welcome Admin</a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="~/service-team" class="brand-link">
                <span class="brand-text font-weight-light">Admin Panel</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a href="~/adminpanel/dashboard" class="nav-link">
                                <i class="nav-icon fas fa-home"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="AdminPanel" asp-controller="News" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-newspaper"></i>
                                <p>News</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/adminpanel/testimonials" class="nav-link">
                                <i class="nav-icon fas fa-user-tie"></i>
                                <p>Testimonials</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="AdminPanel" asp-controller="Project" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-star"></i>
                                <p>Projects</p>
                            </a>
                        </li>
                      
                        <li class="nav-item">
                            <a href="~/" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Logout</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="container-fluid">
                @RenderBody()
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright © 2025 Samruddhi Composites.</strong>
            All rights reserved.
        </footer>

    </div>

    <!-- AdminLTE Scripts -->
    <script src="~/lib/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/lib/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/adminlte/dist/js/adminlte.min.js"></script>
</body>
</html>
